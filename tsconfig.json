{
    "compilerOptions": {
        "declaration": true,
        "importHelpers": true,
        "module": "commonjs",
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "target": "es2020",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "types": [
            "reflect-metadata",
            "jest",
            "node"
        ],
        "typeRoots": [
            "./typings",
            "./node_modules/@types"
        ],
    },
    "include": [
        "src/**/*"
    ]
}
